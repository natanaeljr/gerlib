// See https://aka.ms/vscode-remote/devcontainer.json for format details or
// https://aka.ms/vscode-dev-containers/definitions for sample configurations.
{
	"dockerFile": "Dockerfile",
	"extensions": [
		"ms-vscode.cpptools",
		"xmonader.vscode-capnp",
	],
	"name": "gerlib",
	"runArgs": [
		"-v",
		"/home/natan/.ssh:/home/duck/.ssh",
		"-v",
		"/home/natan/.vscode:/home/duck/.vscode"
	],
	"workspaceMount": "src=/home/natan/Desktop/gerlib,dst=/home/duck/gerlib,type=bind,consistency=cached",
	"workspaceFolder": "/home/duck/gerlib",
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"C_Cpp.updateChannel": "Insiders",
		"C_Cpp.experimentalFeatures": "Enabled",
		"editor.suggest.localityBonus": true,
		"editor.tokenColorCustomizations": {
			"textMateRules": [
				{
					"scope": "support.type",
					"settings": {
						"foreground": "#57adb8ff",
					}
				},
				{
					"scope": "entity.name.type.namespace.scope-resolution",
					"settings": {
						"foreground": "#a9b2c3",
					}
				},
				{
					"scope": "entity.name.type",
					"settings": {
						"foreground": "#56b6c2",
						"fontStyle": ""
					}
				},
				{
					"scope": "variable.other.enummember",
					"settings": {
						"foreground": "#d19a66",
						"fontStyle": ""
					}
				},
				{
					"scope": "entity.name.namespace",
					"settings": {
						"foreground": "#a9b2c3",
						"fontStyle": ""
					}
				},
				{
					"scope": "variable.other.global",
					"settings": {
						"foreground": "#8494f9",
						"fontStyle": ""
					}
				},
			]
		},
	},
}